<section class="bg-green-500">
  <div
    id="contactform"
    class="w-full max-w-md mx-auto py-8 md:py-24 px-4 md:px-8"
  >
    <section>
      <form
        class="bg-white shadow-lg rounded p-8 mb-4"
        method="POST"
        name="contact"
      >
        <input type="hidden" name="form-name" value="contact" />
        <h2 class="mb-8 font-bold text-center text-green-600 ff1">
          Neem gerust contact op
        </h2>
        <p>
          <label class="block text-grey-darker text-sm font-bold mb-4">
            Uw naam:
            <input
              name="name"
              class="appearance-none border rounded w-full py-2 px-3 mt-2 text-grey-darker leading-tight focus:outline-none focus:shadow-outline"
          /></label>
        </p>
        <p>
          <label class="block text-grey-darker text-sm font-bold mb-4">
            Uw E-mail:
            <input
              type="email"
              name="email"
              class="appearance-none border rounded w-full py-2 px-3 mt-2 text-grey-darker leading-tight focus:outline-none focus:shadow-outline"
          /></label>
        </p>
        <p>
          <label class="block text-grey-darker text-sm font-bold mb-4">
            Uw bericht:
            <textarea
              rows="4"
              cols="50"
              name="message"
              class="appearance-none border rounded w-full py-2 px-3 mt-2 text-grey-darker leading-tight focus:outline-none focus:shadow-outline"
            ></textarea>
          </label>
        </p>
        <p><button type="submit" class="button">Verzenden</button></p>
      </form>
    </section>
  </div>
</section>
